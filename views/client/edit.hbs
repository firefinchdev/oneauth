{{!< centercolumn}}

<div class="col-md-8 o-client-add">
    <div class="card">
        <div class="heading-u-red">Edit Details for {{client.id}}</div>
        <div class="attributes d-flex flex-column">
            <form method="post" action="/api/clients/edit/{{client.id}}">
                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Client Name</div>
                        <input type="text" class="input-text col-8" placeholder="Client Name" name="clientname" value="{{client.name}}"/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Domain</div>
                        <input type="text" class="input-text col-8" placeholder="Domains" name="domain" value="{{client.clientDomains}}"/>
                    </div>
                </div>

                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">CallBack Url</div>
                        <input type="text" class="input-text col-8" placeholder="Callback URL" name="callback" value="{{client.clientCallbacks}}"/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Default Url</div>
                        <input type="text" class="input-text col-8" placeholder="Default URL" name="defaulturl" value="{{client.clientdefaultURL}}"/>
                    </div>
                </div>

                <div class="row no-gutters align-items-center justify-content-between detail-row">
                    <div class="label-input col-md-4 col-sm-3">Webhook Url</div>
                    <input type="url" class="input-text col-8" placeholder="Webhook URL" name="webhookurl" value="{{client.webhookURL}}"/>
                </div>
                {{#if client.trusted}}
                {{#if client.webhookURL}}
                Manage Rights:
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="label-input col-md-4 col-sm-3">Users</div>
                        <div class="col-8 row justify-content-between">
                            <span>
                                <input class="input-checkbox" type="checkbox" name="cUser" value="1">
                                CREATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="uUser" value="1">
                                UPDATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="dUser" value="1">
                                DELETE
                            </span>
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="label-input col-md-4 col-sm-3">Demographics</div>
                        <div class="col-8 row justify-content-between">
                            <span>
                                <input class="input-checkbox" type="checkbox" name="cDemographics" value="1">
                                CREATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="uDemographics" value="1">
                                UPDATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="dDemographics" value="1">
                                DELETE
                            </span>
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="label-input col-md-4 col-sm-3">Addresses</div>
                        <div class="col-8 row justify-content-between">
                            <span>
                                <input class="input-checkbox" type="checkbox" name="cAddress" value="1">
                                CREATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="uAddress" value="1">
                                UPDATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="dAddress" value="1">
                                DELETE
                            </span>
                        </div>
                    </div>
                    <div class="row align-items-center justify-content-between pt-3">
                        <div class="label-input col-md-4 col-sm-3">Clients</div>
                        <div class="col-8 row justify-content-between">
                            <span>
                                <input class="input-checkbox" type="checkbox" name="cClient" value="1">
                                CREATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="uClient" value="1">
                                UPDATE
                            </span>
                            <span>
                                <input class="input-checkbox" type="checkbox" name="dClient" value="1">
                                DELETE
                            </span>
                        </div>
                    </div>
                {{/if}}
                {{/if}}

                {{#ifeq val=userRole expected="admin"}}
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Trusted Client</div>
                        <input type="checkbox" class="input-checkbox col-7" placeholder="Default URL" name="trustedClient" {{#if client.trusted}}checked{{/if}}/>
                    </div>
                {{/ifeq}}

                <div class="row justify-content-end">
                    <div class="button-solid">
                        <button type="submit">SAVE CHANGES</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>