
{{!< centercolumn}}

<div class="col-md-8 o-client-add">
    <div class="card">
        <div class="heading-u-red">Add New Client</div>
        <div class="attributes d-flex flex-column">
            <form method="post" action="/api/clients/add">
                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Client Name</div>
                        <input type="text" class="input-text col-8" placeholder="Client Name" name="clientname"/>
                    </div>
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Domain</div>
                        <input type="text" class="input-text col-8" placeholder="Domains" name="domain"/>
                    </div>
                </div>
                <div class="row no-gutters align-items-center justify-content-between detail-row">
                    <div class="label-input col-md-4 col-sm-3">CallBack Url</div>
                    <input type="text" class="input-text col-8" placeholder="Callback URL" name="callback"/>
                </div>
                <div class="row no-gutters align-items-center justify-content-between detail-row">
                    <div class="label-input col-md-4 col-sm-3">Default Url</div>
                    <input type="text" class="input-text col-8" placeholder="Default URL" name="defaulturl"/>
                </div>
                <div class="row no-gutters align-items-center justify-content-between detail-row">
                    <div class="label-input col-md-4 col-sm-3">Webhook Url</div>
                    <input type="url" class="input-text col-8" placeholder="Webhook URL" name="webhookURL"/>
                </div>
                <div class="row justify-content-end">
                    <div class="button-solid">
                        <button type="submit">ADD CLIENT</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>