{{!< centercolumn}}
<div class="col-md-8 c-client-add">
    <div class="card">
        <div class="heading-u-red">Details for {{client.name}}</div>
            <div class="attributes d-flex flex-column">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Client Name</div>
                        <input type="text" class="input-text col-8" value="{{client.name}}" disabled/>
                    </div>
                <div class="row justify-content-between">
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Client ID</div>
                        <input type="text" class="input-text col-8" value="{{client.id}}" disabled/>
                    </div>

                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Client Secret</div>
                        <input type="text" class="input-text col-8" value="{{client.secret}}" disabled/>
                    </div>
                </div>

                <div class="row justify-content-between">
                  {{#each client.domain as |domain|}}
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">Domain</div>
                        <input type="text" class="input-text col-8" value="{{domain}}" disabled/>
                    </div>
                  {{/each}}
                </div>

                <div class="row justify-content-between">
                  {{#each client.callbackURL as |callback|}}
                    <div class="row no-gutters align-items-center justify-content-between detail-row">
                        <div class="label-input col-md-4 col-sm-3">CallBack Url</div>
                        <input type="text" class="input-text col-8" value="{{callback}}" disabled/>
                    </div>
                  {{/each}}
                </div>

                <div class="row justify-content-between">
                  <div class="row no-gutters align-items-center justify-content-between detail-row">
                      <div class="label-input col-md-4 col-sm-3">Default Url</div>
                      <input type="text" class="input-text col-8" value="{{client.defaultURL}}" disabled/>
                  </div>

                  {{#ifeq val=userRole expected="admin"}}
                      <div class="row no-gutters align-items-center justify-content-between detail-row">
                          <div class="label-input col-md-4 col-sm-3">Trusted Client</div>
                          <input type="checkbox" class="input-checkbox col-7" {{#if client.trusted}} checked {{/if}} disabled/>
                      </div>
                  {{/ifeq}}
                </div>

                <br>
                <div class="row justify-content-end">
                  <div class="reset-button mr-5">
                    <a class="grey" href="/users/me/clients/">
                      <button>BACK </button>
                    </a>
                  </div>

                  <div class="button-solid">
                    <a class="white" href="/clients/{{client.id}}/edit/">
                      <button>EDIT CLIENT</button>
                    </a>
                  </div>
              </div>
          </div>
      </div>
</div>
